@page "/sample"

<style>
    @* Frame *@
    .out-frame {
        border: solid 1px gray;
        position: absolute;
        z-index: -1;
        margin-top: 30px;
        border-radius: 5px;
        width: 85%;
        height: 900px;
        margin-left: -10px;
    }

    @* Head Area *@
    .head-frame {
        border-radius: 5px;
        background-color: skyblue;
        height: 100px;
        text-align: center;
        padding-top: 17px;
        display: inline-flex;
    }
    .head-select-frame {
        min-width: 10%;
        width: 20%;
    }
    .head-select {
        background-color: rgba( 255, 255, 255, 0.5 );
        border: none;
    }
    .s1-div{
        width:30%; height:100%;
    }
    @* Body Area *@
    .body-frame {
        border-radius: 5px;
        height: 800px;
        text-align: center;
    }
    .con1-frame {
        height: 100px; 
        display:flex;
        line-height: 5em;
    }
    .con2-frame {

    }
    .con3-frame {
    }

    @* Custom *@
    .show-border {
        border: solid 1px black;
    }
    .show-border2{
        border:dashed 1px blue;
    }
    .head-ma {
        margin-left: 13%;
    }
    .btnSave {
        margin-bottom: 12px;
    }
    .color-white{
        color: white;
    }
</style>

<div class="out-frame"></div>

@* Head Area *@
<div class="container-fluid head-frame show-border ">
    <div class="form-floating head-select-frame">
        <select class="form-select head-select" id="s1" aria-label="s1">
            <option value="1">A-LINE</option>
            <option value="2">B-LINE</option>
            <option value="3">C-LINE</option>
            <option value="4">D-LINE</option>
        </select>
        <label for="floatingSelect">라인 선택</label>
    </div>
    <div class="form-floating head-select-frame head-ma">
        <select class="form-select head-select" id="s2" aria-label="s2">
            <option value="1">A-01</option>
            <option value="2">B-02</option>
            <option value="3">C-03</option>
            <option value="4">D-04</option>
        </select>
        <label for="floatingSelect">NG 슈트 선택</label>
    </div>
    <div class="form-floating head-select-frame head-ma">
        <select class="form-select head-select" id="s2" aria-label="s2">
            <option value="1">설정하지 않음</option>
            <option value="2">설정 함!</option>
        </select>
        <label for="floatingSelect">참고 라인 선택</label>
    </div>

    <button type="button" class="btn btn-primary head-ma btnSave">▲<br />SAVE</button>
</div>

@* Body Area *@
<div class="container-fluid body-frame">

    <div class="show-border con1-frame">
        <div class="s1-div show-border2">
            <span> 분류 계획 </span>
        </div>
        <div class="s1-div show-border2">
            <span> 분류 계획 </span>
        </div>
        <div style="width:30%; height:100%; min-width:285px;" class="show-border2">
            <button type="button" class="btn btn-success">계획 변경</button>
            <button type="button" class="btn btn-secondary">추가</button>
            <button type="button" class="btn btn-secondary">수정</button>
            <button type="button" class="btn btn-danger">삭제</button>
        </div>
        <div style="width:30%; height:100%;" class="show-border2">
            <button type="button" class="btn btn-primary">업로드</button>
            <button type="button" class="btn btn-primary">다운로드</button>
        </div>


    </div>
</div>


