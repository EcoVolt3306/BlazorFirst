@page "/sample"

<style>
    .head {
        width: 95%;
        background-color: cornflowerblue;
        color: white;
        text-align:center;
        margin-left: 2.5%;
        z-index:1;
        position:absolute;
        display:inline-block;
    }
    .head-box{
        display:inline;
        margin-right:50px;
    }
    .body {
        width: 100%;
        height: 800px;
        text-align: center;
        background-color: antiquewhite;
        z-index: 0;
        position: absolute;
        margin-top:15px;
    }
    .st2{
        margin-top:40px;
    }
</style>



<MatCard>
    <MatCard class="head">
        <div class="head-box">
            <span>라인 선택</span>
            <select>
                <option>A</option>
                <option>B</option>
                <option>C</option>
                <option>D</option>
            </select>
        </div>
        <div class="head-area">
            <span>NG 슈트 선택</span>
            <select>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
            </select>
        </div>
        <div class="head-area">
            <span>참고 라인 선택</span>
            <select>
                <option>None</option>
            </select>
        </div>
        <MatButton Raised="true">
            []<br />Save
        </MatButton>
    </MatCard>

    <MatCard Class="body">
        <span Class="st2">
            asdasdasd
        </span>
    </MatCard>

</MatCard>

