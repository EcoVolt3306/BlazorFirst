@page "/"

<style>
    @* Frame *@
    @*#out-frame {
        border: solid 1px gray;
        position: absolute;
        z-index: -1;
        margin-top: 30px;
        border-radius: 5px;
        width: 85%;
        height: 900px;
        margin-left: -10px;
    }*@

    @* Head Area *@
    #head-frame {
        border-radius: 5px;
        background-color: skyblue;
        height: 100px;
        justify-content: space-between;
        align-items: center;
        flex-wrap: nowrap;
    }
    .head-select-frame {
        min-width: 131px;

    }
    .head-select {
        background-color: rgba( 255, 255, 255, 0.5 );
        border: none;
    }

    @* Body Area *@
    #body-frame {
        height: 800px;
        background-color:antiquewhite;
    }
    #body1-frame {
        height: 100px;
        justify-content: center;
        align-items: center;
        flex-wrap: nowrap;
    }
    #b1-s1, #b1-s2, #b1-s3, #b1-s4, #b1-s5 {
        height: 100%;
    }
    #b1-s1 {
        width: 30%;
    }
    #b1-s2 {
        width: 20%;
        line-height: 2rem;
    }
    #b1-s3 {
        width: 25%;
    }
    #b1-s4 {
        width: 20%;
        min-width: 231.31px;
    }
    #b1-s5 {
        width: 13%;
        min-width: 140.44px;
    }

    #body2-frame {
        height: 250px;
        justify-content: center;
        align-items: center;
        flex-wrap: nowrap;
    }
    .con3-frame {
    }

    @* Custom *@
    .show-border {
        border: solid 1px black;
    }
    .show-border2{
        border:dashed 1px blue;
    }
    .head-ma {
        margin-left: 13%;
    }
    .btnSave {
        margin-bottom: 12px;
    }
    .color-white{
        color: white;
    }
    .btn-up {
        height: 4rem;
    }
    .nowrap {
        flex-wrap: nowrap;
    }
</style>

<div id="head-frame" class="container-fluid row">
    <div class="form-floating col-md-2 col-sm-1 head-select-frame">
        <select class="form-select head-select">
            <option value="1">A-LINE</option>
            <option value="2">B-LINE</option>
            <option value="3">C-LINE</option>
            <option value="4">D-LINE</option>
        </select>
        <label for="floatingSelect">라인 선택</label>
    </div>
    <div class="form-floating col-md-2 col-sm-1 head-select-frame">
        <select class="form-select head-select">
            <option value="1">A-01</option>
            <option value="2">B-02</option>
            <option value="3">C-03</option>
            <option value="4">D-04</option>
        </select>
        <label for="floatingSelect">NG 슈트 선택</label>
    </div>    
    <div class="form-floating col-md-2 col-sm-3 head-select-frame">
        <select class="form-select head-select">
            <option value="1">설정 하지 않음</option>
            <option value="2">설정함</option>
        </select>
        <label for="floatingSelect">참고 라인 선택</label>
    </div>
    <button type="button" class="btn btn-primary head-ma col-md-1 btnSave col-sm-2">▲<br />SAVE</button>
</div>






<main id="body-frame" class="container-fluid">
    <div id="body1-frame" class="row show-border">
        <div class="col-md-3" style="text-align:center;">
            분류 계획 &lt; <span style="color:forestgreen;"><b>@plan</b></span> &gt;
        </div>
        <div class="col-md-2">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="col-md-2">
            <div class="form-floating">
                <select class="form-select">
                    <option selected>@plan</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                <label>분류 계획 선택</label>
            </div>
        </div>
        <div class="col-md-3">
            <button type="button" class="btn btn-success btn-up btn-sm">계획 변경</button>
            <button type="button" class="btn btn-secondary btn-up btn-sm">추가</button>
            <button type="button" class="btn btn-secondary btn-up btn-sm">수정</button>
            <button type="button" class="btn btn-danger btn-up btn-sm">삭제</button>
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-primary btn-up btn-sm">업로드</button>
            <button type="button" class="btn btn-primary btn-up btn-sm">다운로드</button>
        </div>
    </div>

    <div id="body2-frame" class="row show-border">
        <div class="col-md-11">
            START
        </div>
        <div class="col-md-1">
            <button type="button" class="btn btn-check btn-sm">설정 저장</button>
            <button type="button" class="btn btn-check btn-sm">펼쳐 보기</button>
            <button type="button" class="btn btn-check btn-sm">비율 일괄 설정</button>
            <span style="color:red;">텍스트 내용</span>

        </div>
    </div>
</main>


@code
{
    string plan = "1xxx DTK, Korea";
}